<includes>

	<include name="Fade_In_WindowOpen">
		<animation type="WindowOpen">
			<effect type="fade" start="0" end="100" time="150" delay="50" />
		</animation>
	</include>	

	<include name="Fade_Out_WindowClose">
		<animation type="WindowClose">
			<effect type="fade" start="100" end="0" time="150" delay="50" />
		</animation>
	</include>	

	<include name="Zoom_In_WindowOpen">
		<animation type="WindowOpen">
			<effect type="zoom" start="90" end="100" center="auto" time="200" />
		</animation>
	</include>	

	<include name="Zoom_Out_WindowClose">
		<animation type="WindowClose">
			<effect type="zoom" start="100" end="90" center="auto" time="200" />
		</animation>
	</include>	

	<include name="Fade_And_Zoom_In_Visible">
		<animation type="Visble">
			<effect type="fade" start="0" end="100" time="150" delay="50" />
			<effect type="zoom" start="90" end="100" center="auto" time="200" />
		</animation>
	</include>	

	<include name="Fade_And_Zoom_Out_Hidden">
		<animation type="Hidden">
			<effect type="fade" start="100" end="0" time="150" delay="50" />
			<effect type="zoom" start="100" end="90" center="auto" time="200" />
		</animation>
	</include>		

</includes>